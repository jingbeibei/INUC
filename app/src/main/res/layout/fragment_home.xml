<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.inuc.inuc.main.ImageSlideshow.ImageSlideshow
        android:id="@+id/is_gallery"
        android:layout_width="match_parent"
        android:layout_height="192dp"></com.inuc.inuc.main.ImageSlideshow.ImageSlideshow>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@mipmap/icon_madify_password" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@mipmap/icon_madify_data" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@mipmap/icon_black_phone" />

        </LinearLayout>

        <Button
            android:id="@+id/news_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新闻" />

        <Button
            android:id="@+id/principal_mailbox_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="校长信箱" />

        <Button
            android:id="@+id/office_automation_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OA" />

        <Button
            android:id="@+id/Micro_space_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微空间" />


    </LinearLayout>


</LinearLayout>