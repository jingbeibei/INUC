<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <ImageView
            android:id="@+id/id_image_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon__head"
            />

            <TextView
                android:id="@+id/id_text_name"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="一个没有情商的孩纸"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/id_image_head"
                android:layout_toEndOf="@+id/id_image_head" />
            <TextView
                android:id="@+id/id_text_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="12-12"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/id_text_name"
                android:layout_toRightOf="@+id/id_image_head"
                android:layout_toEndOf="@+id/id_image_head" />
    </RelativeLayout>

        <WebView
            android:id="@+id/id_webview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            />








    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:id="@+id/id_text_look_count"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:gravity="center"
            android:text="浏览220次"
            />




        <ImageView
            android:id="@+id/id_image_support"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:background="@mipmap/icon_zone_support" />



        <ImageView
            android:id="@+id/id_image_remark"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_zone_remark"
            android:padding="2dip" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/id_text_support_number"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="12"/>
    <TextView
        android:id="@+id/id_final"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="个人觉得很赞"/>
    </LinearLayout>
    <LinearLayout android:layout_marginTop="5dp"
        android:id="@+id/comment_list"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btn_input_comment"
        android:hint="评论"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="14dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="30dp"
        android:background="@drawable/bg_input_comment"
        android:textColorHint="#aaaaaa"
        />



</LinearLayout>